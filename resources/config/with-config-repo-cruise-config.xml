<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="132">
    <server commandRepositoryLocation="default" serverId="gauge" tokenGenerationKey="token">
       <artifacts>
         <artifactsDir>artifacts</artifactsDir>
       </artifacts>
    </server>
    <config-repos>
       <config-repo id="config-repo" pluginId="json.config.plugin">
         <git url="material-for-pipeline-git-config-repo" />
       </config-repo>
       <config-repo id="config-repo1" pluginId="json.config.plugin">
         <git url="material-for-pipeline-git-config-repo1" />
       </config-repo>
       <config-repo id="config-repo2" pluginId="json.config.plugin">
         <git url="material-for-pipeline-git-config-repo2" />
       </config-repo>
    </config-repos>
    <pipelines group="basic">
        <pipeline name="simple-upstream">
            <materials>
                <git url="material-for-simple-upstream" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="sleep" >
                            <arg>30</arg>
                          </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
        <pipeline name="main-config-pipeline">
            <materials>
                <git url="material-for-main-config-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="sleep" >
                                <arg>30</arg>
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
    </pipelines>
    <environments>
        <environment name="test-environment">
            <environmentvariables>
                <variable name="foo">
                    <value>bar</value>
                </variable>
            </environmentvariables>
            <pipelines></pipelines>
        </environment>
    </environments>
</cruise>
