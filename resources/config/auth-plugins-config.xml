<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd"
        schemaVersion="133">
    <server commandRepositoryLocation="default" serverId="gauge" tokenGenerationKey="token">
        <artifacts>
            <artifactsDir>artifacts</artifactsDir>
        </artifacts>
        <security>
          <authConfigs>
              <authConfig id="61f10215-9fba-4962-a2f4-d6c8944ade32" pluginId="cd.go.authentication.passwordfile">
                  <property>
                      <key>PasswordFilePath</key>
                      <value>$password_properties</value>
                  </property>
              </authConfig>
          </authConfigs>
            <roles>
                <role name="admins">
                    <users>
                        <user>admin</user>
                        <user>pwdadmin</user>
                    </users>
                </role>
                <role name="G1_View" />
                <role name="G1_Operate" />
            </roles>
            <admins>
                <role>admins</role>
            </admins>
        </security>
    </server>
    <pipelines group="basic">
        <pipeline name="basic-pipeline">
            <materials>
                <git url="material-for-basic-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls">
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
    </pipelines>
    <pipelines group="G1">
        <authorization>
            <operate>
                <role>G1_Operate</role>
            </operate>
            <view>
                <role>G1_View</role>
            </view>
            </authorization>
            <pipeline name="basic-pipeline-with-auth" lockBehavior="lockOnFailure">
            <materials>
                <git url="material-for-basic-pipeline-with-auth" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="firstStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="fail">
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
            <stage name="secondStage">
                <jobs>
                    <job name="firstJob">
                        <tasks>
                            <exec command="ls">
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
    </pipelines>
</cruise>
