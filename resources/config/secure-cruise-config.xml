<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="90">
    <server artifactsdir="artifacts" commandRepositoryLocation="default" serverId="gauge">
        <security>
            <passwordFile path="$password_properties"/>
            <roles>
                <role name="admins">
                    <users>
                        <user>admin</user>
                    </users>
                </role>
            </roles>
            <admins>
                <role>admins</role>
            </admins>
        </security>
    </server>
    <pipelines group="basic">
        <pipeline name="basic-pipeline-with-git-material">
            <materials>
                <git url="$git-on-git-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="sleep">
                                <arg>5</arg>
                                <runif status="passed"/>
                            </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
    </pipelines>
</cruise>
