<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="89">
    <server artifactsdir="artifacts" commandRepositoryLocation="default" serverId="gauge" />
    <config-repos>
       <config-repo plugin="json.config.plugin">
         <git url="$git-config-repo" />
       </config-repo>
       <config-repo plugin="json.config.plugin">
         <git url="$git-config-repo1" />
       </config-repo>
       <config-repo plugin="json.config.plugin">
         <git url="$git-config-repo2" />
       </config-repo>
    </config-repos>
    <pipelines group="basic">
        <pipeline name="simple-upstream">
            <materials>
                <git url="$git-on-git-pipeline" dest="git" materialName="git" autoUpdate="false"/>
            </materials>
            <stage name="defaultStage">
                <approval type="manual"/>
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="sleep" >
                            <arg>30</arg>
                          </exec>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>
    </pipelines>
</cruise>
